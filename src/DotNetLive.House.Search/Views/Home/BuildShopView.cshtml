@model IEnumerable<DotNetLive.House.Search.Models.BuildingBaseInfo>

@{
    ViewData["Title"] = "BuildShopView";
}

<div class="container-fluid">
    <div class="row">
        <h4 class="col-lg-3">请输入您搜索的关键字: </h4>
        <div class="col-lg-2 col-lg-pull-1">
            <form asp-action="Search" method="post">
                <input type="text" class="input-sm" name="name" />
                <input type="submit"  class="btn btn-primary" value="搜索" />
            </form>
        </div>
        <div class="col-lg-7 text-right">
            <p>
                <a asp-action="Create"> <input type="submit" class="btn btn-success" value="新增房源" /></a>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            楼盘名称
                        </th>
                        <th>
                            最小价格
                        </th>
                        <th>
                            最大价格
                        </th>
                        <th>
                            建筑面积
                        </th>
                        <th>
                            地址
                        </th>
                        <th>
                            封面图
                        </th>
                        <th>
                            备注
                        </th>
                        <th>
                            创建时间
                        </th>

                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewData["data"] as List<BuildingBaseInfo>)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MinPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaxPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BuiltupArea)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @*<img src="http://192.168.100.159:5100/image/@Html.DisplayFor(modelItem => item.Icon)" width="80" height="80">*@
                                <img src="~/images/@Html.DisplayFor(modelItem => item.Icon)" width="80" height="80">

                             
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Summary)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreateTime)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">编辑</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">删除</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
